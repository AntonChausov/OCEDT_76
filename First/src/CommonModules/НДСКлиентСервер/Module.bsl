Функция СуммаНДСПоСтавке(Сумма, СтавкаНДС) Экспорт
	
	СуммаНДС = Неопределено; 
	
	Если СтавкаНДС = ПредопределенноеЗначение("Перечисление.СтавкиНДС.НДС10") Тогда
		СуммаНДС = (Сумма * 0.1)/(1+0.1);
	ИначеЕсли СтавкаНДС = ПредопределенноеЗначение("Перечисление.СтавкиНДС.НДС20") Тогда
		СуммаНДС = (Сумма * 0.2)/(1+0.2); 
	Иначе
		СуммаНДС = 0;
	КонецЕсли;  
	
	Возврат СуммаНДС;
	
КонецФункции